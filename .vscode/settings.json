{
  "eslint.packageManager": "pnpm",
  "eslint.workingDirectories": [
    { "pattern": "apps/*" },
    { "pattern": "packages/*" }
  ],

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "material-icon-theme.folders.associations": {
    /* Packages */
    "eslint-config": "config",
    "tsconfig": "typescript",

    /* I18N */
    "en-us": "decorators",
    "pt-br": "decorators",
    "slash": "command",

    /* Client Modules */
    "administration": "admin",
    "custom-voice": "audio",
    "moderation": "tools"
  },

  "restoreTerminals.terminals": [
    {
      "splitTerminals": [
        { "name": "akane/", "commands": ["clear"] },
        { "name": "apps/client", "commands": ["cd apps/client", "clear"] }
      ]
    },
    {
      "splitTerminals": [
        { "name": "akane/", "commands": ["clear"] },
        { "name": "apps/web", "commands": ["cd apps/web", "clear"] }
      ]
    }
  ],

  "prettier.configPath": "packages/eslint-config/.prettierrc.js",
  "typescript.tsdk": "node_modules/typescript/lib"
}
