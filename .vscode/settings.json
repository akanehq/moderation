{
  "eslint.packageManager": "pnpm",
  "eslint.workingDirectories": [
    // You should add every workspace folder here that you want to lint.
    // This is a workaround for eslint working with pnpm workspaces.
    "./apps/client",
    "./apps/web"
  ],

  "material-icon-theme.folders.associations": {
    "administration": "admin",
    "custom-voice": "audio",
    "moderation": "tools",
    "slash": "command",
    "en-US": "decorators",
    "pt-BR": "decorators",
    "tsconfig": "typescript"
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "files.associations": {
    "*.env": "dotenv"
  },

  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  }
}
